//---------------------------------------------------------------------------
#include <vcl.h>
#include <cmath>
#pragma hdrstop

#include "Unit1.h"
#include "Stack.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
Stack *stk = new Stack();
std::string operations;
void Operations()
{
	AnsiString op = Form1->Edit8->Text;
	std::string temp = op.c_str();
	for(int i = 0, j = 0; temp[i] != '\0'; i++)
	{
		if(temp[i] == '+' || temp[i] == '-' || temp[i] == '*' || temp[i] == '/'
		 || temp[i] == '(' || temp[i] == ')')
		 {
			operations[j] = temp[i];
			j++;
         }
    }
}
bool is_op(char c)
{
	return c == '+' || c == '-' || c == '*' || c == '/';
}
int priority(char c)
{
	if(c == '+' || c == '-') return 1;
	else if(c == '*' || c == '/')return 2;
	else return 0;
}
void Step(char c)
{
	float a = stk->Delete();
	float b = stk->Delete();
	switch(c)
	{
		case '+': stk->Add(b + a); break;
		case '-': stk->Add(b - a); break;
		case '*': stk->Add(b * a); break;
		case '/': stk->Add(b / a); break;
    }
}
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner) : TForm(Owner){}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button1Click(TObject *Sender)
{
	try
	{
		float a = StrToFloat(Edit1->Text);
		float b = StrToFloat(Edit2->Text);
		float c = StrToFloat(Edit3->Text);
		float d = StrToFloat(Edit4->Text);
		float e = StrToFloat(Edit5->Text);
		Operations();

		Form1->Memo1->Lines->Add(operations.c_str());
	}
	catch(...)
	{
		ShowMessage("¬ведите корректные данные!");
		Edit1->Text = "";
		Edit2->Text = "";
		Edit3->Text = "";
		Edit4->Text = "";
		Edit5->Text = "";
	}
}
