//---------------------------------------------------------------------------
#include <vcl.h>
#pragma hdrstop
#include "Tree.h"
#include "Unit1.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
Tree *root = nullptr;
bool Check(int num)
{
	for(int i = 1 ; i < Form1->StringGrid1->RowCount; i++)
	{
		if(num == Form1->StringGrid1->Cells[1][i].ToInt()) return false;
	}
	return true;
}
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
	StringGrid1->Cells[0][0] = "Фамилия";
	StringGrid1->Cells[1][0] = "Номер в команде";
	Memo1->Lines->Clear();
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button1Click(TObject *Sender)
{
	try
	{
		AnsiString str = Edit1->Text;
		int num = StrToInt(Edit2->Text);
		if(Check(num))
		{
			if(num <= 0 || num >= 100)
			{
                Edit2->Text = "";
				ShowMessage("Некорректный номер");
			}
			else
			{
				StringGrid1->RowCount++;
				StringGrid1->Cells[0][StringGrid1->RowCount - 1] = str;
				StringGrid1->Cells[1][StringGrid1->RowCount - 1] = num;
				root->Add(root, str.c_str(), num);
				Memo1->Lines->Add("Добавлен элемент");
			   // root->ShowTree(TreeView1);

               Button2->Enabled = True;
			}
		}
		else
		{
			Edit2->Text = "";
			ShowMessage("Номера не могут совпадать");
		}
	}
	catch(...)
	{
	   Edit2->Text = "";
	   ShowMessage("Некорректный номер");
	}
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button2Click(TObject *Sender)
{
  //root->PrintTree(root, TreeView1);
  TreeView1->Items->Add(NULL, root->surname.c_str());
}
//---------------------------------------------------------------------------

