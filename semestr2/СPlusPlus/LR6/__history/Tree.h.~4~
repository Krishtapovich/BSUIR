//---------------------------------------------------------------------------
#include <vcl.h>
#ifndef TreeH
#define TreeH

class Node
{
public:
	AnsiString surname;
	int number;
	Node *pLeft, *pRight;
};

class Tree
{
private:
	Node *pHead;
	Node* SearchFree(Node*, int);
	void PrintTree(Node*, TTreeView*, int index = 0);
public:
	Tree();
	void AddNode(AnsiString, int);
	void ShowTree(TTreeView*);
    AnsiString GetPlayer(int);
};
//---------------------------------------------------------------------------
#endif
