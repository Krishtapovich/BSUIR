#pragma hdrstop
#pragma argsused

#include <tchar.h>
#include <iostream>
#include <stdio.h>
#include <conio.h>
#include <math.h>
#include <windows.h>
using namespace std;

int _tmain() {
	SetConsoleOutputCP(1251);
	float a, x, b, c;
	cout << "Введите x для расчета a = sin(x), b = cos(x), c = log(x): ";
	cin >> x;
	a = sin(x);
	b = cos(x);
	c = log(x);
	if (a < b && a < c) {
		cout << "Минимальное значение принимает a: " << a;
	}
	else if (b < a && b < c) {
		cout << "Минимальное значение принимает b: " << b;
	}
	else if (c < a && c < b) {
		if (x == 0) {
			cout << "Невозможно опеределить значение для c";
		}
		else {
			cout << "Минимальное значение принимает c: " << c;
		}
	}
	else if (a == b) {
		cout << "Минимальное значение принимают a и b: " << a;
	}
	else if (b == c) {
		cout << "Минимальное значение принимают b и c: " << a;
	}
	else if (a == b) {
		cout << "Минимальное значение принимают a и c: " << a;
	}
	else if (a == b && b == c) {
		cout << "Все значения равны: " << a;
	}
	getch();
	return 0;
}
