#pragma hdrstop
#pragma argsused

#ifdef _WIN32
#include <tchar.h>
#else
typedef char _TCHAR;
#define _tmain main
#endif
#include <iostream>
#include <stdio.h>
#include <conio.h>
#include <math.h>
#include <windows.h>
using namespace std;

int _tmain() {
    SetConsoleOutputCP(1251);
	float a, x, b, c;
	cout << "Введите x: ";
	cin >> x;
	a = sin(x);
	b = cos(x);
	c = log(x);
	if (a < b && a < c) {
		cout << "Минимальное значение: " << a;
	}
	else if (b < a && b < c) {
		cout << "Минимальное значение: " << b;
	}
	else if (c < a && c < b) {
		cout << "Минимальное значение: " << c;
	}
	else if (a == b && b == c) {
		cout << "Все значения равны: " << a;
	}
	getch();
	return 0;
}
