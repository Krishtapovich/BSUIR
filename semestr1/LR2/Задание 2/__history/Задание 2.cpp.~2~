#pragma hdrstop
#pragma argsused
#include <tchar.h>
#include <iostream>
#include <conio.h>
#include <stdio.h>
#include <windows.h>
using namespace std;

int _tmain() {
	SetConsoleOutputCP(1251);
	float d;
	char zn;
again:
	cout << "Введите значение переменной d: ";
	cin >> d, a;
znak:
	cout << "Введите знак операции: ";
	cin >> zn;
	switch (zn) {
	case '+':
		d += a;
		cout << "Новое значение переменной d: " << d << endl;
		break;
	case '-':
		d -= a;
		cout << "Новое значение переменной d: " << d << endl;
		break;
	case '/':
		d /= a;
		cout << "Новое значение переменной d: " << d << endl;
		break;
	case '*':
		d *= a;
		cout << "Новое значение переменной d: " << d << endl;
		break;
	default:
		cout << "Неправильный ввод" << endl;
		goto znak;

	}
proverka:
	cout << "Нажмите 'Y' для повторного ввода: ";
	cin >> zn;
	if (zn == 'y' || zn == 'Y') {
		goto again;
	}
	else {
		cout << "Неправильный ввод" << endl;
		goto proverka;
	}
	getch();
	return 0;
}
